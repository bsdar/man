!!!!!!!!!!!!!
!!! xidle !!!
!!!!!!!!!!!!!

xidle.timeout:				300
xidle.program:				/usr/local/bin/slock




!!!!!!!!!!!!!
!!! xterm !!!
!!!!!!!!!!!!!

xterm*termName:				xterm-256color

!! Keys
xterm*metaSendsEscape:		true
xterm*VT100.Translations:	#override \n\
	~Alt ~Ctrl <Key>BackSpace:	string(0x7f) \n\
	~Alt ~Ctrl <Key>Delete:	string(0x1b) string("[3~") \n\
	Ctrl Meta <Key>C:		copy-selection(CLIPBOARD) \n\
	Ctrl Meta <Key>V:		insert-selection(CLIPBOARD) \n\

!! Viewport
xterm*geometry:				155x45+50+50
xterm*scrollBar:			false
xterm*cursorUnderLine:		on
xterm*cursorBlink:			1




!!!!!!!!!!!!!!!!!!!!!!!!
!!! Global look&feel !!!
!!!!!!!!!!!!!!!!!!!!!!!!

!! Fonts & co
Xft.autohint:				1
Xft.lcdfilter:				lcddefault
Xft.hintstyle:				hintslight
Xft.hinting:				1
Xft.antialias:				1
Xft.rgba:					none
*font:						xft:Ubuntu Mono:pixelsize=15,style=regular
URxvt.letterSpace:			-1
xterm*scaleHeight:			0.90


